# ===========================================
# LLM-101 环境变量配置模板
# ===========================================
# 请复制此文件为 .env 并填入您的实际配置

# ===========================================
# API Keys 配置
# ===========================================

# OpenAI API Key
# 获取地址: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek API Key (推荐，性价比高)
# 获取地址: https://platform.deepseek.com/api-keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Anthropic API Key
# 获取地址: https://console.anthropic.com/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# 模型配置
# ===========================================

# 默认使用的模型
DEFAULT_MODEL=gpt-3.5-turbo

# 模型参数配置
MAX_TOKENS=4096
TEMPERATURE=0.7
TOP_P=1.0

# ===========================================
# 数据库配置
# ===========================================

# SQLite数据库路径
DATABASE_URL=sqlite:///./data/llm101.db

# Redis配置 (可选，用于缓存)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL配置 (可选，用于生产环境)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=llm101
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# ===========================================
# 向量数据库配置
# ===========================================

# ChromaDB持久化目录
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# 默认嵌入模型
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# Milvus配置 (可选)
MILVUS_HOST=localhost
MILVUS_PORT=19530

# ===========================================
# 模型本地路径配置
# ===========================================

# 本地模型存储路径
LOCAL_MODEL_PATH=./models

# HuggingFace模型缓存路径
HF_HOME=./models/huggingface

# ===========================================
# 日志配置
# ===========================================

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/llm101.log

# 是否启用控制台日志
LOG_TO_CONSOLE=true

# ===========================================
# 服务配置
# ===========================================

# Web服务端口
SERVER_PORT=8000

# 服务主机地址
SERVER_HOST=0.0.0.0

# 是否启用调试模式
DEBUG=false

# ===========================================
# VLLM配置
# ===========================================

# VLLM服务地址
VLLM_BASE_URL=http://localhost:8000

# VLLM模型路径
VLLM_MODEL_PATH=./models/Qwen2-7B-Instruct

# GPU配置
CUDA_VISIBLE_DEVICES=0

# ===========================================
# n8n配置
# ===========================================

# n8n服务地址
N8N_HOST=localhost
N8N_PORT=5678

# n8n webhook URL
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ===========================================
# 安全配置
# ===========================================

# JWT密钥 (请生成随机字符串)
JWT_SECRET=your_jwt_secret_here

# 加密密钥 (请生成随机字符串)
ENCRYPTION_KEY=your_encryption_key_here

# 是否启用HTTPS
ENABLE_HTTPS=false

# ===========================================
# 监控配置
# ===========================================

# 是否启用性能监控
ENABLE_MONITORING=true

# Prometheus配置
PROMETHEUS_PORT=9090

# Grafana配置
GRAFANA_PORT=3000

# ===========================================
# 缓存配置
# ===========================================

# 是否启用缓存
ENABLE_CACHE=true

# 缓存过期时间 (秒)
CACHE_EXPIRE_TIME=3600

# ===========================================
# 文件上传配置
# ===========================================

# 上传文件存储路径
UPLOAD_PATH=./data/uploads

# 最大文件大小 (MB)
MAX_FILE_SIZE=100

# 允许的文件类型
ALLOWED_FILE_TYPES=pdf,txt,docx,md,json

# ===========================================
# 第三方服务配置
# ===========================================

# 和风天气API Key (用于Agent示例)
WEATHER_API_KEY=your_weather_api_key_here

# 搜索API Key (用于网络搜索)
SEARCH_API_KEY=your_search_api_key_here

# ===========================================
# 开发环境配置
# ===========================================

# 是否启用热重载
ENABLE_RELOAD=true

# 是否启用详细错误信息
VERBOSE_ERRORS=true

# 测试数据库URL
TEST_DATABASE_URL=sqlite:///./data/test.db 